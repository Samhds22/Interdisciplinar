<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calendar.Activity.EventActivity"
    tools:layout_editor_absoluteY="81dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/title_event_edit"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="@string/title_event"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:background="#c62918"
        android:paddingLeft="15dp"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/date_event_edit"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:hint="@string/date_event"
            android:background="@drawable/border_rounded_other_fields"/>

        <EditText
            android:id="@+id/time_event_edit"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/border_rounded_other_fields"
            android:hint="hint" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_button"
            android:background="@drawable/border_rounded_button"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"/>
    </LinearLayout>

</LinearLayout>